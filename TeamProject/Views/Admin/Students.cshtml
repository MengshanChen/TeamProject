@model TeamProject.Models.StudentViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Students";
}
<br /><br /><br />
<div class="container">
    <div class="row">
        <div align="right">
            @Html.ActionLink("Register", "Create", null, new { @class = "btn btn-success" })
            @Html.ActionLink("Archive", "Archive", null, new { @class = "btn btn-primary" })
        </div>
    </div><br />
    <div class="row text-center">
        <div class="col-sm-12">
            @{
                if (Model.StudentList == null || !Model.StudentList.Any())
                {
                    <br />
                    <p>No Students in the System</p>
                    <br />
                }
                else
                {
                    foreach (var item in Model.StudentList)
                    {
                        <div class="col-sm-3">
                            <a id="@item.Id" href="~/Admin/Read/@item.Id">
                                <img src="~/Content/Images/@item.PictureUri" width="150" height="150" />
                                <br />
                                <span>
                                    @item.Name
                                </span>
                            </a>
                        </div>
                    }
                }
            }
        </div><br /><br />
    </div>
</div>