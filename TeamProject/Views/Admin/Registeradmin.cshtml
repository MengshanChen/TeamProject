
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Register admin";
}
<style>
    body {
        /* Background image is centered vertically and horizontally at all times */
        background-position: center center;
        /* Background image doesn't tile */
        background-repeat: no-repeat;
        /* Background image is fixed in the viewport so that it doesn't move when
        the content's height is greater than the image's height */
        background-attachment: fixed;
        /* This is what makes the background image rescale based
        on the container's size */
        background-size: cover;
        /* Set a background color that will be displayed
        while the background image is loading */
        background-color: whitesmoke;
    }
</style>
<style>
    .container1 {
        position: relative;
        width: 100%;
    }

        .container1 img {
            width: 100%;
            height: auto;
        }

        .container1 .btn-1 {
            position: absolute;
            top: 86.5%;
            left: 72.3%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            background-color: #083e52;
            color: white;
            font-size: 16px;
            padding: 16px 65px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            text-align: center;
        }

        .container1 .btn-2 {
            position: absolute;
            top: 82%;
            left: 82.1%;
            background-color: #119A8E;
            color: white;
            font-size: 16px;
            padding: 16px 60px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            text-align: center;
        }

        .container1 .form-control1 {
            position: absolute;
            top: 38%;
            left: 63.4%;
            font-size: 24px;
            padding: 12px 10px;
            max-width: 413px;
        }

        .container1 .form-control2 {
            position: absolute;
            top: 54%;
            left: 63.4%;
            font-size: 24px;
            padding: 12px 10px;
            max-width: 413px;
        }

        .container1 .form-control3 {
            position: absolute;
            top: 70%;
            left: 63.4%;
            font-size: 24px;
            padding: 12px 10px;
            max-width: 413px;
        }
</style>
<center>
    <div class="container1">
        <br /><br /><br /><br />
        <img src="~/Content/Pages/Admin Registration.png" alr="Register" />
        @Html.ActionLink("CANCEL", "Dashboard", null, new { @class = "btn-1" })
        @Html.ActionLink("REGISTER", "Dashboard", null, new { @class = "btn-2" })
        <input type="text" size="1000" class="form-control1" placeholder="First Name" required autofocus>
        <label for="firstName"></label>
        <input type="text" size="1000" class="form-control2" placeholder="Last Name" required autofocus>
        <label for="lastName"></label>
        <input type="email" size="1000" class="form-control3" placeholder="Email address" required autofocus>
        <label for="email"></label>
    </div>
</center>