
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Calendar";
}


<style>
    body {
        width: 65%;
        margin: 50px auto;
        background-color: whitesmoke;
        font-family: 'Kanit', sans-serif;
    }
</style>

<h2 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 80px; font-weight: bold;color:#083e52;">CALENDAR</h2>
    <div class="container" style="position:center">

        <div class="calendar-base">

            <div class="year">2018</div>
            <!-- year -->
            <div class="triangle-left"></div>
            <!--triangle -->
            <div class="triangle-right"></div>
            <!--  triangle -->

            <div class="months">
                <span class="month-hover2">Jan</span>
                <span class="month-hover2">Feb</span>
                <span class="month-hover2">Mar</span>
                <strong class="month-color2">Apr</strong>
                <span class="month-hover2">May</span>
                <span class="month-hover2">Jun</span>
                <span class="month-hover2">July</span>
                <span class="month-hover2">Aug</span>
                <span class="month-hover2">Sep</span>
                <span class="month-hover2">Oct</span>
                <span class="month-hover2">Nov</span>
                <span class="month-hover2">Dec</span>
            </div><!-- months -->
            <hr class="month-line" />

            <div class="days">SUN MON TUE WED THU FRI SAT</div>
            <!-- days -->

            <div class="num-dates">

                <div class="first-week"><span class="grey">26 27 28 29 30 31</span> 01</div>
                <!-- first week -->
                <div class="second-week">02 03 04 05 06 07 08</div>
                <!-- week -->
                <div class="third-week">09 10 11 12 13 14 15</div>
                <!-- week -->
                <div class="fourth-week">16 17 18 19 20 21 22</div>
                <!-- week -->
                <div class="fifth-week">23 24 25 26 <strong class="white">27</strong> 28 29</div>
                <!-- week -->
                <div class="sixth-week">30 <span class="grey">01 02 03 04 05 06</span></div>
                <!-- week -->
            </div>
            <!-- event-indicator -->
            <div class="active-day2"></div>
            <!-- active-day -->

        </div>
        <!-- calendar-base -->
        <div class="calendar-left2">

            <div class="hamburger">
                <div class="burger-line"></div>
                <!-- burger-line -->
                <div class="burger-line"></div>
                <!-- burger-line -->
                <div class="burger-line"></div>
                <!-- burger-line -->
            </div>
            <!-- hamburger -->


            <div class="num-date">27</div>
            <!--num-date -->
            <br />
            <div class="day">Wednesday</div>
            <!--day -->
            <div class="current-events">
                Current Events
                <br />
                <ul>
                    <li>School ends at 2:30pm!</li>
                </ul>
            </div>
            <!--current-events -->

            <br />
            <br />
            <div class="create-event">Create an Event</div>
            <!-- create-event -->
            <div class="add-event"><span class="add">+</span></div>
            <!-- add-event -->

        </div>
    </div>