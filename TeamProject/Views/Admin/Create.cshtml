@model TeamProject.Models.StudentModel

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <h2>Create Student</h2>
        <br />
        <br />

        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="row">
            <div class="col-sm-3 text-right">
                @Html.DisplayNameFor(m => m.Name)
            </div>
            <div class="col-sm-2">
                @Html.EditorFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 text-right">
                @Html.DisplayNameFor(m => m.PictureId)
            </div>
            <div class="col-sm-2">
                @Html.DropDownListFor(m => m.PictureId, TeamProject.Backend.PictureBackend.Instance.GetPictureListItem(Model.PictureId))
                @Html.ValidationMessageFor(m => m.PictureId)
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-sm-3 text-right">
            </div>
            <div class="col-sm-4">
                @Html.ActionLink("Cancel", "Students", new { id = Model.Id }, new { @class = "btn btn-success" })
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </div>
}
    </div>
</div>
