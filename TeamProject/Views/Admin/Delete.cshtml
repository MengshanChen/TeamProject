@model TeamProject.Models.StudentDisplayViewModel
@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row">

        @{
            if (Model == null)
            {
                <p>No Student</p>
            }

            else
            {
                <div class="row">
                    <h2>Delete Student</h2>
                    <br />
                    <br />

                    <div class="row">
                        <div class="col-sm-3 text-right">
                        </div>
                        <div class="col-sm-2">
                            <img src="~/Content/Images/@Model.PictureUri" width="75" height="75" />
                            <br />
                            <span>
                                @Model.Name
                                <br />
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.Name)
                        @Html.HiddenFor(m => m.LastName)
                        @Html.HiddenFor(m => m.Email)
                        @Html.HiddenFor(m => m.PictureId)

                        <div class="row">
                            <div class="col-sm-3 text-right">
                            </div>
                            <div class="col-sm-4">
                                @Html.ActionLink("Cancel", "Students", new { id = Model.Id }, new { @class = "btn btn-success" })
                                <input type="submit" value="Delete" class="btn btn-danger">
                            </div>
                        </div>
                    }

                </div>
            }

        }
    </div>
</div>