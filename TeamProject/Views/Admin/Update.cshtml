@model TeamProject.Models.StudentDisplayViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Update";
}

<div class="container">
    <div class="row">

        @{
            if (Model == null)
            {
                <p>No Student</p>
            }

            else
            {
                <div class="row">
                    <h2>Update Student</h2>
                    <br />
                    <br />

                    <div class="row">
                        <div class="col-sm-3 text-right">
                        </div>
                        <div class="col-sm-2">
                            <img src="~/Content/Images/@Model.PictureUri" width="75" height="75" />
                            <br />
                            <span>
                                @Model.Name
                                <br />
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>

                    @using (Html.BeginForm())
    {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="row">
                    <div class="col-sm-3 text-right">
                        @Html.DisplayNameFor(m => m.Name)
                    </div>
                    <div class="col-sm-2">
                        @Html.EditorFor(m => m.Name)
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 text-right">
                        @Html.DisplayNameFor(m => m.PictureId)
                    </div>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(m => m.PictureId, TeamProject.Backend.PictureBackend.Instance.GetPictureListItem(Model.PictureId))
                        @Html.ValidationMessageFor(m => m.PictureId)
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3 text-right">
                        @Html.DisplayNameFor(m => m.Status)
                    </div>
                    <div class="col-sm-2">
                        @Html.EnumDropDownListFor(x => x.Status, "Select Status")
                        @Html.ValidationMessageFor(m => m.Status)
                    </div>
                </div>

                <br />
                <br />
                <div class="row">
                    <div class="col-sm-3 text-right">
                    </div>
                    <div class="col-sm-4">
                        @Html.ActionLink("Cancel", "Students", new { id = Model.Id }, new { @class = "btn btn-success" })
                        <input type="submit" value="Update" class="btn btn-primary">
                    </div>
                </div>

}


                </div>
            }

        }
    </div>
</div>

