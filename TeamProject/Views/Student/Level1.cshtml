
@{
    @* Using a shared layout for the Game *@
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "Game Level 1";
}

@* CSS Stylesheet *@
<style type="text/css">


    /* Borderless page style */
    hr {
        border: none;
    }

    body {
        background-image: url('/Content/Images/level 1.png');
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
        background-size: cover;
    }

    /* Container holding the image and the text */
    .container4 {
        position: relative;
        width: 100%;
        padding: 0;
        margin: 0;
    }

    /* Centered In Bottom Half */
    .bottom {
        position: fixed;
        top: 10%;
        left: 90%;
        transform: translate(-30%, -30%);
    }


    /* Button Settings */
    .button {
        border-radius: 4px;
        background-color: dodgerblue;
        border: 1px solid white;
        padding: 10px 15px;
        text-align: right;
        text-decoration: none;
        display: inline-block;
        font-family: 'Palatino Linotype';
        font-size: 20px;
        font-weight: bold;
        margin: 4px 2px;
        cursor: pointer;
        /*opacity: 0.8;*/
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }

    /* Button Shadow Settings */
    .button {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.4), 0 6px 20px 0 rgba(0,0,0,0.3);
    }

        /* Button Shadow Hover Settings */
        .button:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }

        .button a:visited {
            color: white;
        }

    footer {
        display: none;
    }
</style>

<div class="container4">
    @*<img src="~/Content/Images/loading page final.png" style="width:130%;" />*@
    <div class="bottom">
        <a href="~/Student/Collection" class="button" role="button" style="color: white;">Collection</a>
    </div>
</div>




