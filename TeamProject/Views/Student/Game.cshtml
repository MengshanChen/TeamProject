@* Landing Page for the Game World Tour *@

@{
    @* Using a shared layout for the Game *@
    Layout = "~/Views/Shared/_GameLayout.cshtml";
    @* Game Instruction Page *@
    ViewBag.Title = "Game";
}


@* Margin and Padding Style *@
<style type="text/css">

    body {
        padding: 30px;
        margin: 30px;
    }

    #bg {
        position: fixed;
        top: 0;
        left: 0;
        /* Preserve aspet ratio */
        min-width: 100%;
        min-height: 100%;
    }

</style>


@* Display The World Tour Title *@
<h1>World Tour</h1>


@* Display Instructions to play the game *@
<h2>Instructions</h2>


@* World Tour Instructions image *@
<img src="~/Content/Images/WorldTour/Instructions.png" id="bg" alt="World Tour" usemap="#Instructions">
