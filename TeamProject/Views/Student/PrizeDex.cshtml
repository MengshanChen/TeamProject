<h2>PrizeDex</h2>

@{
    @* Using a shared layout for the Game *@
    Layout = "~/Views/Shared/_GameLayout.cshtml";
    @* Game Prize Index Page *@
    ViewBag.Title = "PrizeDex";
}


@* Margin and Padding Style *@
<style type="text/css">

    /* Borderless page style */
    hr {
        border: none;
    }

    /* Places image as background photo */
    #ptbg {
        position: fixed;
        top: 50px;
        left: 0;
        /* Preserve aspet ratio */
        min-width: 100%;
        min-height: 100%;
    }

    /* Container holding the image and the text */
    .container {
        position: relative;
        text-align: center;
        color: white;
    }

    /* Centered text */
    .centered {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    /* Centered In Bottom Half */
    .bottom {
        position: fixed;
        top: 75%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    /* TextArea Settings */
    textarea {
        width: 300px;
        height: 350px;
        padding: 1.6rem;
        text-align: center;
        border: 3px solid #ff6a00;
        border-radius: 3px 3px 3px 3px;
        box-shadow: 1px 1px 3px #ff6a00 inset;
        background-color: #dfd6c9;
        font-family: Raleway, sans-serif;
        font-size: 1.7rem;
        color: navy;
        resize: none;
        overflow: auto;
        overflow-x: hidden;
        opacity: 0.8;
    }

    /* Button Settings */
    .button {
        border-radius: 4px;
        background-color: #ff6a00;
        border: 1px solid navy;
        color: navy;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        opacity: 0.8;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }

    /* Button Shadow Settings */
    .button {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.4), 0 6px 20px 0 rgba(0,0,0,0.3);
    }

    /* Button Shadow Hover Settings */
    .button:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
    }

</style>



@* World Tour PrizeDex image *@
<img src="~/Content/Images/WorldTour/PrizeDexBackground.png" id="ptbg" alt="World Tour">
<div class="container">
    <div class="centered">

        @* Display The Prize Index Instructions *@
        <textarea readonly>

Congratulations!

You Checked-in On-Time

The Prize Tomb Rewards You
With a Priceless Artifact

Can You Collect them All?


        </textarea>
    </div>
</div>


@* Button Link from the Prize Index Back to the Level 1 Gamepage *@
<div class="container">
    <div class="bottom">
        <a href="~/Student/Game" class="button" role="button">Continue</a>
    </div>
</div>
