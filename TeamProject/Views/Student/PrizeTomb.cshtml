

@{
    @* Using a shared layout for the Game *@
    Layout = "~/Views/Shared/_GameLayout.cshtml";
    @* Game PrizeTomb Page *@
    ViewBag.Title = "PrizeTomb";
}


@* Margin and Padding Style *@
<style type="text/css">

    /* Borderless page style */
    hr {
        border: none;
    }

    body {
        background-image: url('/Content/Images/WorldTour/prize tomb with text - 2.png');
        background-repeat: no-repeat;
        padding: 0px;
        margin: 0px;
    }


    /* Container holding the image and the text */
    .container {
        position: relative;
    }

    /* Centered In Bottom Half */
    .bottom {
        position: fixed;
        top: 60%;
        left: 35%;
        /*transform: translate(-30%, -30%);*/
    }


    /* Button Settings */
    .button {
        border-radius: 4px;
        background-color: #412b0d;
        border: 1px solid white;
        color: white;
        padding: 10px 15px;
        text-align: right;
        text-decoration: none;
        display: inline-block;
        font-family: 'Palatino Linotype';
        font-weight: bold;
        font-size: 15px;
        margin: 4px 2px;
        cursor: pointer;
        /*opacity: 0.8;*/
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }

    /* Button Shadow Settings */
    .button {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.4), 0 6px 20px 0 rgba(0,0,0,0.3);
    }

        /* Button Shadow Hover Settings */
        .button:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }

       
</style>

@* Button Link to Select Gamepiece *@
<div class="container">
    <div class="bottom">
        <a href="~/Student/PrizeDex" class="button" role="button" style="color: white;">Enter the Tomb</a>
    </div>
</div>




