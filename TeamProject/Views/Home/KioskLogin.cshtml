
@{
    ViewBag.Title = "Kiosk Login";
}


<div class="enlargecontainer-login">
    <div class="row">
        <div class="col-md-6 order-md-1">
            <img class="featurette-image img-fluid mx-auto" src="~/Content/Pages/kiosk.jpg" data-holder-rendered="true" id="login-image" />
        </div>
        <div class="col-md-6 order-md-2">
            <form class="form-signin">
                <p class="lead">
                    <center>
                        <div class="text-center mb-4">
                            <div>
                                <a href="~/Home/Index"><img src="~/Content/Pages/home logo.png" id="login-logo" /></a>
                                <h1 class="mb-3 font-weight-normal" id="login-title">KIOSK LOGIN</h1>
                            </div>
                        </div>
                        <div class="form-label-group">
                            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
                            <label for="inputEmail"></label>
                        </div>
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
                            <label for="inputPassword"></label>
                        </div>
                        <div class="checkbox mb-4 text-center">
                            <label><input type="checkbox" value="remember-me" id="non-float"> Remember me</label>
                            <a href="~/Home/ForgotPassword" id="login-password">Forget Password?</a>
                        </div>
                        <a href="~/Kiosk/Attendance" class="btn btn-lg btn-primary btn-block login-button lineargreen" type="submit" id="login-greenbutton">LOG IN</a>
                    </center>
                </p>
            </form>
            <p class="mt-5 mb-3 text-muted text-center" id="login-copyright">&copy; U-High Team @@ Seattle University</p>
        </div>
    </div>
</div>

