
@{
    ViewBag.Title = "Student Login";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 order-md-1">
            <img class="featurette-image img-fluid mx-auto" src="~/Content/Pages/student.jpg" data-holder-rendered="true" style="width:105%;height:auto;float:left; position:relative" />
        </div>
        <div class="col-md-6 order-md-2">
            <form class="form-signin">
                <p class="lead">
                    <center>
                        <div class="text-center mb-4">
                            <div>
                                <a href="~/Home/Index"><img src="~/Content/Pages/home logo.png" style="width:20%;height: auto;margin-left:20px;margin-top:18%" /></a>
                                <h1 class="h3 mb-3 font-weight-normal" style="font-size:15px;color:#083E52;padding:20px;">STUDENT LOGIN</h1>
                            </div>
                        </div>
                        <div class="form-label-group">
                            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
                            <label for="inputEmail"></label>
                        </div>
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
                            <label for="inputPassword"></label>
                        </div>
                        <div class="checkbox mb-4 text-center">
                            <label><input type="checkbox" value="remember-me" style="float:none"> Remember Me</label>
                            <a href="~/Home/ForgotPassword" style="font-size:14px;margin-left:30px">Forget Password?</a>
                        </div>
                        <a href="~/Student/Dashboard" class="btn btn-lg btn-primary btn-block" type="submit" style="background-image:linear-gradient(-16deg, #f8632f 50%, #f97648 50%);color: white;padding: 8px 15px;margin: 8px 0;border: none;cursor: pointer;width: 51%;">LOG IN</a>
                    </center>
                </p>
            </form>
            <p class="mt-5 mb-3 text-muted text-center" style="font-size:12px; color:lightgray;">&copy; U-High Team @@ Seattle University</p>
        </div>

        <style>
            body {
                padding-top: 0px;
                margin-top: 0px;
                margin-bottom: 0px;
                margin-left: 0;
                text-align: left;
                background-color: #fff;
            }

            .container {
                padding-left: 0;
                zoom: 130%;
            }

            .col-md-6 {
                padding-left: 0;
            }
        </style>
    </div>
</div>





